# Meta Ad Analyzer AI - 環境変数設定例

# ============================================
# データベース設定
# ============================================
POSTGRES_USER=meta_ad_user
POSTGRES_PASSWORD=change-this-password-in-production
POSTGRES_DB=meta_ad_analyzer

# ============================================
# バックエンド設定
# ============================================
# 環境（development, staging, production）
ENVIRONMENT=development

# デバッグモード（True/False）
DEBUG=True

# データベース接続URL
DATABASE_URL=postgresql://meta_ad_user:change-this-password-in-production@localhost:5432/meta_ad_analyzer

# セキュリティ
# 本番環境では必ず強力なランダム文字列（32文字以上）に変更してください
SECRET_KEY=your-secret-key-change-in-production

# JWT設定
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Redis
REDIS_URL=redis://localhost:6379/0

# AWS S3（オプション）
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=meta-ad-analyzer
S3_REGION=us-east-1

# CORS設定（カンマ区切り）
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# レート制限
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_MINUTE_DEV=3

# Sentry（エラートラッキング、オプション）
SENTRY_DSN=

# メール設定（オプション）
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=

# ============================================
# フロントエンド設定
# ============================================
# バックエンドAPIのURL
VITE_API_URL=http://localhost:8000/api
